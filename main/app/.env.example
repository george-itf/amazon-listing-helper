# Amazon Listing Helper - Environment Variables
# Copy this to .env and fill in your values
# For Railway: Set these in the Variables tab

# =============================================================================
# SERVER
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# DATABASE (Auto-set by Railway when you add PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# DATA DIRECTORY
# =============================================================================
DATA_DIR=/app/data

# =============================================================================
# AMAZON SP-API (Required)
# Get these from Amazon Seller Central > Apps & Services > Develop Apps
# =============================================================================
SP_API_REFRESH_TOKEN=Atzr|your_refresh_token
SP_API_CLIENT_ID=amzn1.application-oa2-client.xxxxx
SP_API_CLIENT_SECRET=your_client_secret
SP_API_SELLER_ID=your_seller_id
SP_API_MARKETPLACE_ID=A1F83G8C2ARO7P

# =============================================================================
# KEEPA API (Optional - for price history and competition data)
# =============================================================================
KEEPA_API_KEY=

# =============================================================================
# REDIS (Optional - Auto-set by Railway when you add Redis)
# =============================================================================
REDIS_URL=

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
WORKER_POLL_INTERVAL_MS=5000
WORKER_BATCH_SIZE=5

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
